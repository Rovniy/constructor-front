html
  margin 0
  padding 0
  outline 0
  border none
  min-height 100%
  height 100%

body
  min-height 100%
  height 100%
  font 14px/16px Helvetica, Tahoma, serif
  background #f0f0f0
  position relative
  margin 0
  padding 0

#__nuxt, #__layout
  display flex
  height 100%
  width 100%

.ta-right
  text-align right

.sidebar-widget
  display block
  width 50%
  height 30px
  background dodgerblue
  color #000000
  float left
  text-align center
  line-height 30px
  border 1px solid darkslategrey
  box-sizing border-box
  &:hover
    background deepskyblue
    cursor pointer

